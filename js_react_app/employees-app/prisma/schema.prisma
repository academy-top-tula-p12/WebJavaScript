generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Company{
    id Int @id @default(autoincrement())
    title String
    employees Employee[]
}

model Position{
    id Int @id @default(autoincrement())
    title String
    salary Int
    employees Employee[]
}

model Employee{
    id Int @id @default(autoincrement())
    name String
    birthDate DateTime
    company Company @relation(fields: [companyId], references: [id])
    companyId Int
    position Position @relation(fields: [positionId], references: [id])
    positionId Int
}
